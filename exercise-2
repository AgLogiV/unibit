using System;

class Program
{
    static void Main()
    {
        int sum = 0;
        int a = 1;  // Първият член на редицата на Фибоначи
        int b = 2;  // Вторият член на редицата на Фибоначи

        while (b <= 4000000)
        {
            if (b % 2 == 0)
            {
                sum += b; // Добавя четните числа от редицата към сумата
            }

            int next = a + b; // Генерира следващия член на редицата
            a = b;            // Премества a на следващата позиция
            b = next;         // Премества b на следващата позиция
        }

        Console.WriteLine("Сумата на четните членове на редицата на Фибоначи, които не надвишават четири милиона, е: " + sum);
    }
}
